# MongoDB Configuration
# Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/urlshortener

# MongoDB Atlas (Cloud)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/urlshortener?retryWrites=true&w=majority

# Server Configuration
SERVER_PORT=8080
APP_BASE_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-for-jwt-token-generation-change-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration (Gmail example)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_RPH=1000

# External APIs
GEO_API_ENABLED=true
